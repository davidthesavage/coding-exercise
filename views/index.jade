html
  head
    title Annotation Interface
    style.
      .chapter__loading, .save__loading, .annotateControls {
        position: absolute;
        opacity: 0;
        z-index: -1;
      }

  body
    section.controls
      div.controls__container
        div.controls__loading Loading chapters...
        div.controls__previous
        div.controls__current
        div.controls__next

    section.chapter
      div.chapter__loading Loading chapter...
      div.chapter__text

    section.save
      div.save__loading Loading chapter...
      input.save__button(type="button", value="Save")

    section.annotateControls#annotateControls
      input#personRadio(type="radio", value="person", name="annotate", onchange="updateAnnotation('person')")
      input#locationRadio(type="radio", value="location", name="annotate", onchange="updateAnnotation('location')")
      input#organizationRadio(type="radio", value="organization", name="annotate", onchange="updateAnnotation('organization')")

    script(src="client.js")
    link(rel="stylesheet", href="styles.css")